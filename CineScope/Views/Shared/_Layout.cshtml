@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CineScope</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <style>
        body {
            background: radial-gradient(circle at top, #1b2735 0%, #090a0f 100%);
            color: #f1f1f1;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        nav.navbar {
            background-color: rgba(0, 0, 0, 0.7);
            backdrop-filter: blur(8px);
        }

        footer {
            background-color: rgba(0, 0, 0, 0.85);
            backdrop-filter: blur(10px);
            color: #ccc;
            margin-top: auto;
        }

            footer a {
                color: #0dcaf0;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        .btn-primary {
            background-color: #0dcaf0;
            border: none;
        }

            .btn-primary:hover {
                background-color: #06b5dc;
            }

        .btn-outline-light:hover {
            background-color: #0dcaf0;
            border-color: #0dcaf0;
            color: #fff;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold text-info" asp-area="" asp-controller="Home" asp-action="Index">
                    🎥 CineScope
                </a>
              
                <div>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-fill container my-5">
        @RenderBody()
    </main>

    <footer class="text-center py-3">
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year - <span class="text-info">CineScope</span> | All Rights Reserved</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
