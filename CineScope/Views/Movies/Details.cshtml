@model CineScope.Services.MovieDto

@{
    ViewData["Title"] = Model.Title;
}

<style>
    body {
        background: linear-gradient(135deg, #0a0f1c 0%, #1a1f2c 100%);
        color: #f1f1f1;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .movie-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: flex-start;
        gap: 40px;
        margin-top: 50px;
    }

    .movie-poster {
        max-width: 350px;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.5);
    }

    .movie-info {
        max-width: 600px;
    }

    .movie-title {
        font-size: 2rem;
        font-weight: 700;
        color: #0dcaf0;
        margin-bottom: 15px;
    }

    .movie-overview {
        color: #ccc;
        line-height: 1.6;
        margin-bottom: 20px;
    }

    .movie-meta {
        font-size: 1rem;
        margin-bottom: 10px;
    }

    .rating {
        color: #ffd700;
        font-weight: 600;
    }

    .btn-back {
        background-color: #0dcaf0;
        color: #fff;
        border: none;
        border-radius: 6px;
        padding: 8px 18px;
        transition: background 0.3s ease;
    }

        .btn-back:hover {
            background-color: #0bb2d6;
        }

    .similar-section, .cast-section {
        margin-top: 60px;
    }

    .movie-card, .cast-card {
        background-color: #1c2233;
        border: none;
        border-radius: 10px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        overflow: hidden;
    }

        .movie-card:hover, .cast-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 18px rgba(0, 0, 0, 0.5);
        }

        .movie-card img, .cast-card img {
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            height: 330px;
            object-fit: cover;
        }

        .movie-card .movie-info {
            padding: 10px;
        }

    .movie-title-small {
        font-size: 1rem;
        font-weight: 600;
        color: #0dcaf0;
    }
</style>

<div class="container">
    <div class="movie-container">
        <img src="https://image.tmdb.org/t/p/w500/@Model.PosterPath" alt="@Model.Title" class="movie-poster" />

        <div class="movie-info">
            <h2 class="movie-title">@Model.Title</h2>
            <p class="movie-overview">@Model.Overview</p>

            <p class="movie-meta">
                <strong>Release Date:</strong>
                @{
                    if (DateTime.TryParse(Model.ReleaseDate, out var parsedDate))
                    {
                        @parsedDate.ToString("yyyy-MM-dd")
                    }
                    else
                    {
                        @Model.ReleaseDate
                    }
                }
            </p>

            <p class="movie-meta"><strong>Rating:</strong> <span class="rating">@Model.VoteAverage.ToString("0.0")</span></p>

            @if (Model.Genres != null && Model.Genres.Any())
            {
                <p class="movie-meta"><strong>Genres:</strong> @string.Join(", ", Model.Genres.Select(g => g.Name))</p>
            }

            <a asp-controller="Movies" asp-action="Trending" class="btn btn-back mt-3">Back to Trending</a>
        </div>
    </div>

    <hr class="my-5" style="border-color:#333;" />

    @if (ViewBag.SimilarMovies != null && ViewBag.SimilarMovies.Count > 0)
    {
        <div class="similar-section">
            <h3 class="text-info fw-bold mb-4 text-center">You Might Also Like</h3>
            <div class="row">
                @foreach (var movie in ViewBag.SimilarMovies)
                {
                    <div class="col-md-3 mb-4 d-flex">
                        <div class="card movie-card shadow flex-fill">
                            <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" style="text-decoration:none;color:inherit;">
                                <img src="https://image.tmdb.org/t/p/w500/@movie.PosterPath" alt="@movie.Title" class="card-img-top" />
                                <div class="movie-info">
                                    <div class="movie-title-small">@movie.Title</div>
                                    <p class="rating">@movie.VoteAverage.ToString("0.0")</p>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    @if (ViewBag.Cast != null && ViewBag.Cast.Count > 0)
    {
        <div class="cast-section">
            <h3 class="text-info fw-bold mb-4 text-center">Cast & Crew</h3>
            <div class="row justify-content-center">
                @foreach (var actor in ViewBag.Cast)
                {
                    <div class="col-md-3 col-sm-6 mb-4 d-flex justify-content-center">
                        <div class="card cast-card shadow" style="width:220px;">
                            <img src="https://image.tmdb.org/t/p/w500/@(actor.ProfilePath ?? "https://via.placeholder.com/220x330?text=No+Image")"
                                 alt="@actor.Name" />
                            <div class="card-body text-center text-light">
                                <h6 class="fw-bold text-info">@actor.Name</h6>
                                <p class="text-muted mb-0">as @actor.Character</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>
