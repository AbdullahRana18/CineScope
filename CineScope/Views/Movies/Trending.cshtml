@model CineScope.Services.TmdbResponse
@{
    ViewData["Title"] = "Trending Movies";
}

<style>
    body {
        background: linear-gradient(135deg, #0a0f1c 0%, #1a1f2c 100%);
        color: #f1f1f1;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
    }

    .movie-card {
        background-color: #1c2233;
        border: none;
        border-radius: 10px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        overflow: hidden;
        height: 100%;
    }

        .movie-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 18px rgba(0, 0, 0, 0.5);
        }

        .movie-card img {
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            height: 360px;
            object-fit: cover;
            width: 100%;
        }

    .movie-info {
        padding: 15px;
    }

    .movie-title {
        font-size: 1.1rem;
        font-weight: bold;
        color: #0dcaf0;
        margin-bottom: 6px;
    }

    .movie-overview {
        color: #bbb;
        font-size: 0.9rem;
        height: 60px;
        overflow: hidden;
    }

    .rating {
        font-weight: 600;
        color: #ffd700;
        margin-top: 8px;
    }
</style>

<div class="container mt-5">
    <!-- 🔹 Top bar with title and theme toggle -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-info mb-0">🎬 Trending Movies</h2>
        <div>
            <button id="theme-toggle" class="btn btn-sm btn-outline-light">Toggle Theme</button>
        </div>
    </div>

    <!-- 🔹 Search bar -->
    <form asp-controller="Movies" asp-action="Search" method="get" class="d-flex justify-content-center mb-4" style="max-width:600px;margin:auto;">
        <input type="text" name="query" class="form-control me-2" placeholder="Search movies..." />
        <button class="btn btn-outline-info" type="submit">Search</button>
    </form>

    @if (ViewData["Title"]?.ToString().Contains("Search") == true)
    {
        <div class="text-center mb-4">
            <a asp-controller="Movies" asp-action="Trending" class="btn btn-outline-info">⬅ Back to Trending</a>
        </div>
    }

    <!-- 🔹 Movies container (first page rendered via partial) -->
    <div id="movies-container" data-page="1">
        @Html.Partial("_MovieCardsPartial", Model)
    </div>

    <!-- 🔹 Load more button -->
    <div class="text-center mt-3">
        <button id="load-more" class="btn btn-primary" aria-label="Load more movies">Load more</button>

        <div id="loading-indicator" class="mt-2" style="display:none;">Loading...</div>
    </div>
</div>

@section Scripts {
    <script src="~/js/movies-ui.js"></script>
}
