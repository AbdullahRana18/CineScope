@model List<CineScope.Services.MovieDto>
@{
    ViewData["Title"] = "Admin - Manage Movies";
}

<h2 class="text-center mb-4 fw-bold text-info">🎥 Trending Movies Dashboard</h2>

<div class="row g-4">
    @foreach (var movie in Model)
    {
        <div class="col-md-3">
			<div class="card h-100 shadow-sm">
                <img src="https://image.tmdb.org/t/p/w500/@movie.PosterPath" class="card-img-top" alt="@movie.Title" />

                
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-light">@movie.Title</h5>
                    <p class="card-text text-secondary small">@movie.Overview.Substring(0, Math.Min(100, movie.Overview.Length))...</p>
                    <div class="mt-auto">
                        <p class="text-muted mb-1"><i class="bi bi-calendar"></i> @movie.ReleaseDate</p>
                        <div class="d-flex justify-content-between">
                            <button class="btn btn-success btn-sm"><i class="bi bi-check2-circle"></i> Approve</button>
                            <button class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
