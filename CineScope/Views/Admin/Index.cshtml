@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container text-center mt-5">
    <h1 class="display-5 fw-bold text-info mb-3">
        🎬 Welcome, Admin!
    </h1>

    <p class="lead text-light mb-4" style="font-size: 1.2rem;">
        Manage movie data, approve new additions, and oversee user activity.
    </p>

    <a href="/Admin/ManageMovies" class="btn btn-lg fw-semibold shadow-lg px-5 py-3 glow-btn">
        <i class="bi bi-film"></i> Go to Movie Management
    </a>
</div>

<style>
    /* Background enhancement */
    body {
        background: radial-gradient(circle at top, #101820 0%, #070a0f 100%);
        color: #e0e0e0;
        min-height: 100vh;
    }

    /* Stylish glowing button */
    .glow-btn {
        background: linear-gradient(135deg, #00c6ff, #0072ff);
        color: #fff !important;
        border: none;
        border-radius: 50px;
        transition: all 0.3s ease-in-out;
    }

        .glow-btn:hover {
            transform: translateY(-3px) scale(1.03);
            box-shadow: 0 0 20px rgba(0, 198, 255, 0.6);
            background: linear-gradient(135deg, #00a6ff, #0062ff);
        }

    .lead {
        color: #b8d8ff;
    }
</style>
