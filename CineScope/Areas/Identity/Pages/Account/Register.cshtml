@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    body {
        background: linear-gradient(135deg, #0a0f1c 0%, #1a1f2c 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #f1f1f1;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .register-page-wrapper {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 15px;
    }

    .register-container {
        width: 100%;
        max-width: 420px;
        background: rgba(15, 18, 28, 0.9);
        padding: 40px 35px;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
    }

        .register-container h2 {
            font-weight: 600;
            color: #0dcaf0;
            margin-bottom: 25px;
            text-align: center;
        }

    .form-floating label {
        color: #bbb;
    }

    .form-control {
        background-color: #1f2635;
        border: 1px solid #343a4f;
        color: #fff;
        border-radius: 8px;
    }

        .form-control:focus {
            border-color: #0dcaf0;
            box-shadow: 0 0 6px rgba(13, 202, 240, 0.5);
        }

    .btn-primary {
        background-color: #0dcaf0;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        transition: background-color 0.2s ease;
    }

        .btn-primary:hover {
            background-color: #06b5dc;
        }

    .register-links {
        margin-top: 20px;
        text-align: center;
    }

        .register-links a {
            color: #0dcaf0;
            text-decoration: none;
            font-size: 0.95rem;
        }

            .register-links a:hover {
                text-decoration: underline;
            }
</style>

<div class="register-page-wrapper">
    <div class="register-container">
        <h2>Create your CineScope account</h2>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">
                Register
            </button>

            <div class="register-links">
                <p class="mt-3 mb-1">
                    Already have an account?
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login here</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
